<%-
include("header", {
  title: title,
  stylefile: "login",
  role: role
}); %>
  <main>
    <form class="" action="/auth" method="POST">
      <h1>Login to continue</h1>
      <div class="mb-3 row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
          <input type="email" name="uid" class="form-control" placeholder="email@example.com">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
          <input type="password" name="pwd" class="form-control" id="inputPassword">
        </div>
      </div>
      <!-- <input type="text" name="uid" placeholder="Enter your email">
      <input type="password" name="pwd" placeholder="Enter your password"> -->
      <button type="submit" name="button">Log in</button>
      <p>You can login in with your password and username, what you get from teacher.</p>
    </form>
  </main>
</body>
</html>
