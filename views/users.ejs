<%- include("header", { title: "MBS - My School", stylefile: "admin", role: role }); %>
    <main>
      <section class="edit">
        <article class="users">
          <h1>User</h1>
          <form class="edituser" action="/root/edituser/" method="POST">
            <input type="text" name="name" placeholder="Jmeno" value="<%= selected_user.name %>">
            <input type="text" name="pwd" placeholder="Heslo je zahashované" value="">
            <input type="text" name="id" value="<%= selected_user.id %>" hidden>
            <span class="origin">
              <input type="text" name="email" placeholder="Email" value="<%= selected_user.email %>">
              <select class="" name="role">
                <option value="student" <% if(selected_user.role === 1){%>selected<%} %>>Student</option>
                <option value="teacher" <% if(selected_user.role === 2){%>selected<%} %>>Učitel</option>
                <option value="principal" <% if(selected_user.role === 3){%>selected<%} %>>Řiditel</option>
              </select>
            </span>
            <span class="submiter">
              <button type="button" name="button" onclick="window.location.href=`/root/users`">Zrušit</button>
              <button type="submit" name="button">Uložit</button>
            </span>
          </form>
        </article>
        <form class="massage" action="/root/messenge" method="POST">
          <h1>Odeslat školní zprávu</h1>
          <textarea class="messange" name="messenge" placeholder="napište zprávu"></textarea>
          <button type="submit" name="button">Odeslat</button>
        </form>
      </section>
      <section class="show">
        <article class="navbar">
          <a href="/root/users">Uživatele</a>
          <a href="/root/lessons">Hodiny</a>
          <a href="/root/classes">Třídy</a>
        </article>
        <article class="showest">
          <span>
            <h3>Jmeno</h3>
            <h3>role</h3>
          </span>
          <div class="shower">
            <% let roleLister = [ {role: 3, name: "principal"}, {role: 2, name: "teacher"}, {role: 1, name: "student"}];%>
            <% roleLister.map(rl => users.filter(u => u.role === rl.role).map(u => { %>
              <button <%= typeof selected_user._id !== "undefined" ? u._id.toString() === selected_user._id.toString() ? "disabled": "style='cursor: pointer'" : "" %> onclick="window.location.href=`/root/user/<%= u._id %>`" type="button"><p><%= u.name %></p><p><%= rl.name %> </p></button>
            <% })) %>
          </div>
        </article>
      </section>
    </main>
  </body>
</html>
