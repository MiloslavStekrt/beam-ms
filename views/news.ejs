<%- include("header", {
  title: "MBS - My School",
  stylefile: "news",
  role: role
}); %>
    <main>
      <% news_list.forEach(new_item => { %>
      <article>
        <span>
          <p><%= new_item.when %></p>
          <p><%= new_item.id_user %> <% if(role > 1 && new_item.id_user === user_id){ %> <button onclick="if(confirm('Do you want to delete this global MSG?')){window.location.href=`/remove_msg/<%= new_item.id %>` }">X</button> <% } %></p>
        </span>
        <p><%= new_item.content %></p>
      </article>
      <% }); %>
    </main>
  </body>
</html>
