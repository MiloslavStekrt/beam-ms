<%- include("header", {
  title: "MBS - My School",
  stylefile: "news",
  role: role
}); %>
    <main>
      <% msgs.forEach(msg => { %>
      <article>
        <span>
          <p><%= msg.when %></p>
          <p><%= msg.author_name %> <% if(role > 1 && msg.author.toString() === user_id.toString()){ %> <button onclick="if(confirm('Do you want to delete this global MSG?')){window.location.href=`/remove_msg/<%= msg._id %>` }">X</button> <% } %></p>
        </span>
        <p><%= msg.content %></p>
      </article>
      <% }); %>
    </main>
  </body>
</html>
